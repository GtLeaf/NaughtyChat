<?xml version="1.0" encoding="utf-8"?>
<com.cmd.hit.main.view.adlightwebpage.bottomSheet.AdBottomSheetContainer
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/bottom_sheet_container"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <FrameLayout
        android:id="@+id/pop_up_web_mark"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#80000000"
        android:visibility="gone" />

    <FrameLayout
        android:id="@+id/fl_web_page"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <com.cmd.hit.main.view.adlightwebpage.AdWebPageTitleBar
            android:id="@+id/web_page_title_bar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <com.cmd.hit.main.view.adlightwebpage.AdWebViewContainer
            android:id="@+id/fl_webview_container"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="44.5dp"
            android:visibility="gone"/>

        <com.cmd.hit.adwebview.adwebview.AdWebView
            android:id="@+id/ad_webview"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="44.5dp"/>

        <FrameLayout
            android:id="@+id/pop_up_web_network_error_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="44.5dp"
            android:background="#ffffff"
            android:visibility="gone"
            tools:visibility="visible">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal|top"
                android:layout_marginTop="194dp"
                android:gravity="center"
                android:lineSpacingExtra="3sp"
                android:text="@string/main_light_web_page_error_title"
                android:textColor="@color/s2_21"
                android:textSize="17sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal|top"
                android:layout_marginTop="230dp"
                android:gravity="center"
                android:lineSpacingExtra="3sp"
                android:text="@string/main_light_web_page_error_desc"
                android:textColor="@color/s2_50"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/pop_up_web_retry_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal|bottom"
                android:layout_marginBottom="153dp"
                android:background="@drawable/main_bg_light_web_page_error_retry"
                android:paddingLeft="100dp"
                android:paddingTop="12dp"
                android:paddingRight="100dp"
                android:paddingBottom="12dp"
                android:text="@string/main_retry"
                android:textColor="@color/s2_21"
                android:textSize="15sp" />

        </FrameLayout>

    </FrameLayout>

</com.cmd.hit.main.view.adlightwebpage.bottomSheet.AdBottomSheetContainer>